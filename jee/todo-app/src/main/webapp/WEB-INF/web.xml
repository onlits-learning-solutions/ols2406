<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>My Todo Application</display-name>
  <servlet>
    <servlet-name>Authenticate</servlet-name>
    <servlet-class>ols2406.todoapp.Authenticate</servlet-class>
    <servlet-name>Authenticate</servlet-name>
    <url-pattern>/Authenticate</url-pattern>
    <init-param>
      <param-name>DB_URL</param-name>
      <param-value>jdbc:mariadb://localhost:3306/todoapp_2406</param-value>
    </init-param>
    <init-param>
      <param-name>DB_USER</param-name>
      <param-value>ols2406</param-value>
    </init-param>
    <init-param>
      <param-name>DB_PASS</param-name>
      <param-value>ols2406</param-value>
    </init-param>
  </servlet>
  <servlet>
    <servlet-name>SaveTask</servlet-name>
    <servlet-class>ols2406.todoapp.SaveTask</servlet-class>
    <servlet-name>SaveTask</servlet-name>
    <url-pattern>/SaveTask</url-pattern>
  </servlet>

</web-app>
